<script src="/js/usuario/listar.js"></script>

<h1>Usuários cadastrados</h1>

<div>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nome</td>
                    <td>Email</td>
                    <td>Ativo</td>
                    <td>Perfil</td>
                    <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i<usuarios.length; i++) { %>
                    <tr>
                        <td><%= usuarios[i].id %></td>
                        <td><%= usuarios[i].nome %></td>
                        <td><%= usuarios[i].email %></td>
                        <td><%= usuarios[i].ativo %></td>
                        <td><%= usuarios[i].perfilId %></td>
                        <td>
                            <button data-id="<%= usuarios[i].id %>" class="btn btn-danger btnExcluir"><i class="fas fa-trash"></i></button>
                            <a href="/usuario/alterar/<%= usuarios[i].usuarioId %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="/usuario/cadastrar">Cadastrar novo usuário</a>

</div>